{
    "compilerOptions": {
        "outDir": "../dist",
        "rootDir": ".",
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true
    },
    "include": [
        "./**/*"
    ]
}
